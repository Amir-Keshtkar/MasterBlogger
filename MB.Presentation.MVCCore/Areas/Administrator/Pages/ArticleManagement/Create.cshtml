@page
@model MB.Presentation.MVCCore.Areas.Administrator.Pages.ArticleManagement.CreateModel
@{
    ViewData["Title"] = "Create Article";
}
<div class="card">
    <div class="card-header">
        <h2>Create New Article</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post"  enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label for="Title" class="control-label">Title:</label>
                            <input name="Title" id="Title" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="ShortDescription" class="control-label">Short Description:</label>
                            <textarea name="ShortDescription" id="ShortDescription" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="Image" class="control-label">Image:</label>
                            <!-- image input 
                            <input  name="Image" id="Image" class="form-control-file" />
                            -->
                            <input name="Image" id="Image" type="file" accept="image/*" asp-for="Image" class="form-control-file" />
                            
                            
                        </div>
                        <div class="form-group">
                            <label for="Content" class="control-label">Content:</label>
                            <textarea name="Content" id="Content" class="form-control" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="ArticleCategoryId" class="control-label">Article Categories:</label>
                            <select class="form-control" asp-items="@Model.ArticleCategories" name="ArticleCategoryId" id="ArticleCategoryId">
                                <option value="0">Select Article Category</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administrator">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>